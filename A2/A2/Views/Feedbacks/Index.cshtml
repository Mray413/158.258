@*@model IEnumerable<A2.Models.FeedBack>*@
@model A2.ViewModels.FeedbackIndexViewModel
@{
    //ViewBag.Title = "Index";
    ViewBag.Title = "FeedBacks";
}
<h2>Suggestion Box</h2>
<p class="information">
    &emsp;&emsp;If you have any comments or good suggestions about our website, please create a new index and write down your valuable comments on this webpage.
</p>
<p>

    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Index", "Feedbacks", FormMethod.Get))
    {
        <label>Filter by type:</label>
        @*@Html.DropDownList("FeedbackCategory", "All")*@
        @Html.DropDownListFor(vm => vm.Category, Model.CatFilterItems, "All");
        <input type="submit" value="Filter" />
        @*<input type="hidden" name="Search" id="Search" value="@ViewBag.Search" />*@
        <input type="hidden" name="Search" id="Search" value="@Model.Search" />
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Feedbacks.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Feedbacks.First().Description)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.Feedbacks)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FeedbackCategory.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
    </table>
<style>
    .information{
        width:50%;
    }
</style>
